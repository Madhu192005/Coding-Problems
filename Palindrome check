class Solution {
    public int isPalindrome(String code) {
        int left = 0;
        int right = code.length()-1;
        while(left<right){
            while(left<right&&!Character.isLetter(code.charAt(left))){    // move left to next letter
                left++;
            }
            while(left<right&&!Character.isLetter(code.charAt(right))){  // move right to previous letter
                right--;
            }
            if(Character.toLowerCase(code.charAt(left))!=Character.toLowerCase(code.charAt(right))){ // compare lowercase letters
                return 0;
            }
            left++;
            right--;
        }
        return 1;
    }
}
